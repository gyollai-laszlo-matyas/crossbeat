<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.widget.RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".RegisterActivity"
        >
        <TextView
            android:id="@+id/usernameText"
            android:text="Welcome"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/creditText"
            android:text="music: Power Attack by EBIMAYO\n(ab-sounds.com)"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_below="@id/usernameText" />

        <Button
            android:id="@+id/play0Button"
            android:text="Play - LIGHT Mode"
            android:onClick="start0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_below="@id/creditText" />

        <Button
            android:id="@+id/play1Button"
            android:text="Play - HYPER Mode"
            android:onClick="start1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_below="@id/play0Button" />

        <Button
            android:id="@+id/play2Button"
            android:text="Play - ULTRA Mode"
            android:onClick="start2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_below="@id/play1Button" />

        <Button
            android:id="@+id/leaderboardsButton"
            android:text="View leaderboards"
            android:onClick="viewLeaderboards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_below="@id/play2Button" />

        <Button
            android:id="@+id/logoutButton"
            android:text="Log out"
            android:onClick="logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_below="@id/leaderboardsButton" />
    </android.widget.RelativeLayout>
</ScrollView>